<base:Slideable x:Class="Yaar.Views.EmailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:base="clr-namespace:Yaar.Views" Title="EmailView" Width="330" WindowStyle="None"  ShowInTaskbar="False" AllowsTransparency="True" SizeToContent="WidthAndHeight" Background="#FFC8E6B4" Topmost="True" ShowActivated="False">
    <base:Slideable.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </base:Slideable.BorderBrush>
    <StackPanel>
        <Label Content="From:" Name="From" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="310" FontSize="14" FontWeight="Medium"/>
        <TextBlock Name="Subject" HorizontalAlignment="Left" Margin="13,10,0,10" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="310" FontSize="14"/>

    </StackPanel>
</base:Slideable>
